
@model IEnumerable<mvcCrud.Models.Transaction>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<h2>Search Transaction</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
}

<table class="table">
    <tr class="header">
        <th>
            @Html.DisplayNameFor(model => model.category_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fiscal_year)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.category_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(model => item.description)
            </td>
            <td>
                @Html.DisplayFor(model => item.amount)
            </td>
            <td>
                @Html.DisplayFor(model => item.fiscal_year)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.trans_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.trans_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.trans_id })
            </td>
        </tr>
    }
    </div>
</table>
<div class="form-actions no-color">
    @Html.ActionLink("Back to List", "Index")
</div>
