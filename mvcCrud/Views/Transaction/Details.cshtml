    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.category_name)
            </td>

            <td>
                @Html.DisplayFor(model => item.amount)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(model => item.paymentmode)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(model => item.fiscal_year)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.trans_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.trans_id }) 
               
            </td>
        </tr>
    }
    </div>
</table>
<div>
    <label for="sum">Total Cash :</label>
    @Model.Sum(i => i.amount)

</div>
